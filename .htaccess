# .htaccess PRINCIPAL - GESCOP (Para hosting cPanel)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Headers CORS para API
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin"

    # Manejar OPTIONS requests (CORS preflight)
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ - [R=200,L]

    # 1. API routes - enrutar /api/* a api/index.php
    RewriteCond %{REQUEST_URI} ^/api/ [NC]
    RewriteRule ^api/(.*)$ api/index.php [QSA,L]

    # 2. Frontend build assets
    RewriteCond %{REQUEST_URI} ^/assets/ [NC]
    RewriteRule ^ - [L]

    # 3. Frontend - servir index.html para SPA (React)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.html [QSA,L]
</IfModule>

# Si mod_rewrite no est√° disponible, denegar acceso a API
<IfModule !mod_rewrite.c>
    RedirectMatch 307 ^/api/ /index.html
</IfModule>
