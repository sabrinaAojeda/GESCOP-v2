# .htaccess para BACKEND/api/ - Configuración cPanel simple
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Headers CORS
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin"
    
    # Manejar OPTIONS requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ - [R=200,L]
    
    # Si es un archivo .php, ejecutarlo directamente
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.+\.php)$ $1 [L]
    
    # Si es un directorio, buscar index.php
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(.*)$ $1/index.php [L]
    
    # Todo lo demás va a index.php
    RewriteRule ^(.*)$ index.php [L]
</IfModule>

# Si mod_rewrite no está disponible, denegar acceso directo
<IfModule !mod_rewrite.c>
    <FilesMatch ".*">
        Order deny,allow
        Deny from all
    </FilesMatch>
</IfModule>
